{{#if tasks}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>N.</th>
        <th>Titulo</th>
        <th>Descripci√≥n</th>
        <th>Operaciones</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>
            {{#if done}}
              <a
                href="/toggleDone/{{_id}}"
                class="btn btn-dark btn-sm"
              >UnDone</a>
            {{else}}
              <a
                href="/toggleDone/{{_id}}"
                class="btn btn-success btn-sm"
              >Done</a>
            {{/if}}
            <a href="/delete/{{_id}}" class="btn btn-danger btn-sm">Borrar</a>
            <a href="/edit/{{_id}}" class="btn btn-info btn-sm">Editar</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="h-100 d-flex flex-column align-items-center justify-content-center">
    
      <h1 class="text-center text-white">No Tasks</h1>
    <img src="/icons/file-tasks-add_icon-icons.com_48609.png" />
    
  </div>
{{/if}}